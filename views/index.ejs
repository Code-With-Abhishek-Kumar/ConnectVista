
 

 <%- include('./Include/header') %> 

  <div id="login-form" class="relative">
    <div id="left">

      <h1>Adita general store</h1>
      <p>Adita general store helps you to buy Kirana Product</p>
        
    </div>
    <div id="right">
      <div>

        <form action="/login" method="post">
          <input type="text" name="email" placeholder="Enter Your email here">
          <input type="password" name="password" placeholder="Enter Your password here">
          <button type="submit">Login</button>
          <hr>

        </form>
        <button class="w-52 bg-green-900" id="Register_Btn"><a href="#">Register</a></button>
      </div>
    </div>

  </div>



  <div id="Register-form" class="w-screen h-screen  items-center justify-center absolute top-0  left-0  bg-[gainsboro]  hidden">

    <form action="/register" method="post" enctype="multipart/form-data" class="w-4/12 h-4/5 bg-white drop-shadow-xl p-5 gap-4 flex  flex-col">
      <div class="h-1/6 w-full relative">
        <h2 class="text-2xl font-extrabold">Sign Up</h2>
        <p class="text-xl">It's quick and easy.</p>
        <i class="fa fa-times text-xl absolute right-0 top-0 " aria-hidden="true" id="close"></i>
      </div>
      <div class="flex gap-3">
        <input type="text" required  class="w-[50%] h-9 bg-slate-100 p-1"  placeholder="First name" name="firstName">
        <input type="text"  required class="w-[50%] h-9   bg-slate-100 p-1" placeholder="Surname name" name="surname"  >
      </div>
      <input type="email" class="w-[100%] h-9   bg-slate-100 p-1" placeholder="email Address"
        name="mobileNo_Email" required >
        <input type="text" class="w-[100%] h-20   bg-slate-100 p-1" placeholder="Bio" name="bio" required >
      <input type="password" class="w-[100%] h-9   bg-slate-100 p-1" placeholder="New Password" name="password" required >
      <input type="file" class="w-[100%] h-9   bg-slate-100 p-1" placeholder="Enter Your Profile Image" name="Profile_Image"  >
      <div class="flex gap-2">
        <div class="h9  w-1/3 flex items-center justify-center ">   
          <input type="radio" id="html" name="Gender" value="male"  >
               <label for="html">male</label><br></div>
        <div class="h9 w-1/3 flex items-center justify-center ">
             <input type="radio" id="male" name="Gender" value="CSS" >
            <label for="css">female</label><br>
        </div>
        <div class="h-9 w-1/3 flex items-center justify-center ">
            <input type="radio" id="javascript" name="Gender" value="JavaScript"  >
            <label for="javascript">Custom</label>
        </div>
        <h1 style=""></h1>

      </div>
      <button type="submit" class="w-full h-8 bg-green-900 rounded-md text-white">Register</button>
    </form>

  </div>

 
  <script src="/javascripts/script.js" defer></script>

 <%- include('./Include/footer') %> 
